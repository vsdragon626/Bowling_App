<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image75"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/AddGame"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_above="@+id/ViewGames"
        android:layout_centerInParent="true"
        android:text="@string/GameButton" />
    
    <Button
        android:id="@+id/ViewGames"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:text="@string/View" />

    <Button
        android:id="@+id/Statistics"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/ViewGames"
        android:text="@string/StatsButton" />

</RelativeLayout>
